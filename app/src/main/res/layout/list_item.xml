<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:minHeight="72dp"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/attraction_image_view"
        android:layout_width="136dp"
        android:layout_height="77dp"
        tools:background="#EEEEEE"
        tools:src="@drawable/baron_1898" />

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:layout_below="@id/attraction_image_view"
        tools:text="Exciting dive coaster with a free fall of 37.5 meters" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/attraction_image_view"
        android:orientation="vertical"
        android:paddingLeft="8dp">

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            tools:text="Baron 1898" />

        <TextView
            android:id="@+id/area_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            tools:text="Ruigrijk" />

        <TextView
            android:id="@+id/length_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            tools:text="Minimum length: 1.20 m" />

    </LinearLayout>
</RelativeLayout>